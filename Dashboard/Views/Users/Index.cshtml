@using Dashboard.ViewModel.Users
@model List<UsersViewModel>


@if (Model.Any())
{
    <table class="table table-hover tab">
        <thead>
            <tr>

             
                <td>Email</td>
                <td>DisplayName</td>
                <td>UserName</td>
                <td>Roles</td>
                <td>Action</td>
            </tr>
        </thead>

        <tbody>

            @foreach (var item in Model)
            {
                <tr>

                    <td> @item.Email </td>
                    <td> @item.DisplayName </td>
                    <td> @item.UserName </td>


                    <td>@string.Join(",", item.Roles.ToList())</td>
                    <td>
                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-info ">Edit</a>
               
                    </td>
                </tr>
            }





        </tbody>
    </table>
}
else
{
    <div class=" alert alert-danger mt-3">
        <h3>Not Found Roles !</h3>
    </div>
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
