
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Roles";
}

<hr />

<form  asp-action="Create">

    <div class="input-group mt-3">
        <input name="Name" asp-action="" class="form-control" />
        <div class="input-group-append">
            <button type="submit" class="btn btn-secondary">Add New Role</button>

        </div>
    </div>
</form>

@if (Model.Any())
{
    <table class="table table-hover tab">
        <thead>
            <tr>
           
                <td>Name</td>
                <td>Action</td>
            </tr>
        </thead>

        <tbody>
          
            @foreach (var item in Model)
            {
                <tr>
                
                    <td> @item.Name </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info ">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger ">Remove</a>
                    </td>
                </tr>
            }





        </tbody>
    </table>
}
else
{
    <div class=" alert alert-danger mt-3">
        <h3>Not Found Roles !</h3>
    </div> 
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
